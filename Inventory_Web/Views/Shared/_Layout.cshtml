<!DOCTYPE html>
<html lang="fa" dir="rtl">
 <!-- تغییر جهت متن به راست به چپ -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory_Web</title>

    <!-- اضافه کردن فایل استایل Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- اضافه کردن فایل استایل شخصی (اختیاری) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- اضافه کردن فایل استایل برای RTL (اگر Bootstrap از پیش نصب نباشد) -->
    <!-- ممکن است نیاز باشد پکیج bootstrap.rtl را نصب کنید یا فایل RTL را جداگانه اضافه کنید -->
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" /> -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inventory_Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">کالاها</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">کاربران</a>
                        </li>
                        <!-- می‌توانید لینک‌های دیگر را نیز اضافه کنید -->
                    </ul>
                    <partial name="_LoginPartial" /> <!-- یک partial view برای نمایش لینک خروج (اگر وارد شده باشد) -->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- اینجا محتوای هر صفحه نمایش داده می‌شود -->
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 1404 - Inventory_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">حریم خصوصی</a>
        </div>
    </footer>

    <!-- اضافه کردن اسکریپت‌های Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- اضافه کردن اسکریپت شخصی (اختیاری) -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false) <!-- برای اضافه کردن اسکریپت‌های خاص هر صفحه -->
</body>
</html>