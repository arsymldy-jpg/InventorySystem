@model IEnumerable<Inventory_Web.Models.UserDto>

@{
    ViewData["Title"] = "لیست کاربران";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">مدیریت کاربران</h4>
                    <a asp-action="Create" class="btn btn-primary">ایجاد کاربر جدید</a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>نام</th>
                                        <th>نام خانوادگی</th>
                                        <th>کد پرسنلی</th>
                                        <th>شماره همراه</th>
                                        <th>نقش</th>
                                        <th>وضعیت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.FirstName</td>
                                            <td>@user.LastName</td>
                                            <td>@user.PersonnelCode</td>
                                            <td>@user.MobileNumber</td>
                                            <td>@user.Role</td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">غیرفعال</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info me-1">جزئیات</a>
                                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning me-1">ویرایش</a>
                                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center" role="alert">
                            هیچ کاربری یافت نشد.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>